{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Racket: Run Frontend",
      "type": "shell",
      "command": "racket frontend/main.rkt",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Racket: Run Backend Server",
      "type": "shell",
      "command": "racket backend/server.rkt",
      "problemMatcher": [],
      "group": "build"
    },
    {
      "label": "Racket: Run All Tests (root)",
      "type": "shell",
      "command": "raco test -x .",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Racket: Test Frontend",
      "type": "shell",
      "command": "raco test -x frontend",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Racket: Test Backend",
      "type": "shell",
      "command": "raco test -x backend",
      "problemMatcher": [],
      "group": "test"
    },
    {
      "label": "Racket: Build Docs (Scribble)",
      "type": "shell",
      "command": "raco scribble --htmls docs/index.scrbl",
      "problemMatcher": []
    },
    {
      "label": "Racket: Clean Compiled Artifacts",
      "type": "shell",
      "command": "find . -type d -name compiled -prune -exec rm -rf {} +",
      "problemMatcher": []
    },
    {
      "label": "Racket: Remove Backup Files",
      "type": "shell",
      "command": "find . -type f -name '*.bak' -delete",
      "problemMatcher": []
    },
    {
      "label": "Racket: Watch Tests (posix, needs entr)",
      "type": "shell",
      "command": "find . -type f -name '*.rkt' | entr -c raco test -x .",
      "problemMatcher": []
    }
  ]
}